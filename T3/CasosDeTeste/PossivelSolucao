Solução Fase 1

fase: 1
inicio
funcao esquerda(){
    repetir(3){
        virar()
    }
}
    andar()
    repetir(4){
        andar()
    }
    esquerda()
    andar()
    repetir(3){
        andar()
    }
fim

Solução Fase 2

fase: 2
inicio
funcao meiaVolta(){
    repetir(2) {
        virar()
    }
}
magia destruccio
destruccio = ataque
usar(destruccio)
repetir(2){
    andar()
}
meiaVolta()
magia aguamenti
aguamenti = agua
usar(aguamenti)
meiaVolta()
usar(aguamenti)
andar()
usar(destruccio)
repetir(3){
    andar()
}
virar()
repetir(2){
    andar()
}
fim

Solução Fase 3

fase: 3
inicio
magia kadabra
perguntar (frente == fogueira?){ kadabra = agua }
perguntar (frente == arvore?){ kadabra = ataque }
perguntar (frente == caixa?){ kadabra = fogo }
usar(kadabra)
repetir(4){
    virar()
}
fim